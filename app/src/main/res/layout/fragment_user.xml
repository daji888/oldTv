<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/vs_40"
    android:paddingRight="@dimen/vs_40">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/tvUserHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/tvHistory"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/vs_50"
                android:layout_gravity="center"
                android:layout_margin="@dimen/vs_10"
                android:background="@drawable/button_dialog_vod"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:focusable="true"
                android:nextFocusLeft="@+id/tvSetting"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/vs_10"
                android:paddingRight="@dimen/vs_10">


                <ImageView
                    android:layout_width="@dimen/vs_40"
                    android:layout_height="@dimen/vs_40"
                    android:layout_gravity="center"
                    android:alpha="0.75"
                    android:src="@drawable/icon_history" />

                <TextView
                    android:id="@+id/tvHistory1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/vs_10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:text="历史"
                    android:shadowColor="@color/color_000000_80"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="5"
                    android:textAlignment="gravity"
                    android:textColor="@color/color_CCFFFFFF"
                    android:textSize="@dimen/ts_30" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tvLive"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/vs_50"
                android:layout_gravity="center"
                android:layout_margin="@dimen/vs_10"
                android:background="@drawable/button_dialog_vod"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:focusable="true"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/vs_10"
                android:paddingRight="@dimen/vs_10">


                <ImageView
                    android:layout_width="@dimen/vs_40"
                    android:layout_height="@dimen/vs_40"
                    android:layout_gravity="center"
                    android:alpha="0.75"
                    android:src="@drawable/icon_live" />

                <TextView
                    android:id="@+id/tvLive1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/vs_10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:text="直播"
                    android:shadowColor="@color/color_000000_80"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="5"
                    android:textAlignment="gravity"
                    android:textColor="@color/color_CCFFFFFF"
                    android:textSize="@dimen/ts_30" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tvSearch"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/vs_50"
                android:layout_gravity="center"
                android:layout_margin="@dimen/vs_10"
                android:background="@drawable/button_dialog_vod"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:focusable="true"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/vs_10"
                android:paddingRight="@dimen/vs_10">


                <ImageView
                    android:layout_width="@dimen/vs_40"
                    android:layout_height="@dimen/vs_40"
                    android:layout_gravity="center"
                    android:alpha="0.75"
                    android:src="@drawable/icon_search" />

                <TextView
                    android:id="@+id/tvSearch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/vs_10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:text="搜索"
                    android:shadowColor="@color/color_000000_80"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="5"
                    android:textAlignment="gravity"
                    android:textColor="@color/color_CCFFFFFF"
                    android:textSize="@dimen/ts_30" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tvFavorite"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/vs_50"
                android:layout_gravity="center"
                android:layout_margin="@dimen/vs_10"
                android:background="@drawable/button_dialog_vod"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:focusable="true"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/vs_10"
                android:paddingRight="@dimen/vs_10">

                <ImageView
                    android:layout_width="@dimen/vs_40"
                    android:layout_height="@dimen/vs_40"
                    android:layout_gravity="center"
                    android:alpha="0.75"
                    android:src="@drawable/icon_collect" />

                <TextView
                    android:id="@+id/tvFavorite1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/vs_10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:text="收藏"
                    android:shadowColor="@color/color_000000_80"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="5"
                    android:textAlignment="gravity"
                    android:textColor="@color/color_CCFFFFFF"
                    android:textSize="@dimen/ts_30" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/tvPush"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/vs_50"
                android:layout_gravity="center"
                android:layout_margin="@dimen/vs_10"
                android:background="@drawable/button_dialog_vod"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:focusable="true"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/vs_10"
                android:paddingRight="@dimen/vs_10">


                <ImageView
                    android:layout_width="@dimen/vs_40"
                    android:layout_height="@dimen/vs_40"
                    android:layout_gravity="center"
                    android:alpha="0.75"
                    android:src="@drawable/icon_push" />

                <TextView
                    android:id="@+id/tvPush1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/vs_10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:text="推送"
                    android:shadowColor="@color/color_000000_80"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="5"
                    android:textAlignment="gravity"
                    android:textColor="@color/color_CCFFFFFF"
                    android:textSize="@dimen/ts_30" />

            </LinearLayout>

            
            <LinearLayout
                android:id="@+id/tvSetting"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/vs_50"
                android:layout_gravity="center"
                android:layout_margin="@dimen/vs_10"
                android:background="@drawable/button_dialog_vod"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:focusable="true"
                android:nextFocusRight="@+id/tvHistory"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/vs_10"
                android:paddingRight="@dimen/vs_10">


                <ImageView
                    android:layout_width="@dimen/vs_40"
                    android:layout_height="@dimen/vs_40"
                    android:layout_gravity="center"
                    android:alpha="0.75"
                    android:src="@drawable/icon_setting" />

                <TextView
                    android:id="@+id/tvSetting1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/vs_10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:text="设置"
                    android:shadowColor="@color/color_000000_80"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="5"
                    android:textAlignment="gravity"
                    android:textColor="@color/color_CCFFFFFF"
                    android:textSize="@dimen/ts_30" />

            </LinearLayout>

        </LinearLayout>

        <com.owen.tvrecyclerview.widget.TvRecyclerView
            android:id="@+id/tvHotList1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_below="@+id/tvUserHome"
            android:paddingLeft="@dimen/vs_10"
            android:paddingTop="@dimen/vs_15"
            android:paddingRight="@dimen/vs_10"
            android:paddingBottom="@dimen/vs_15"
            app:tv_horizontalSpacingWithMargins="@dimen/vs_10"
            app:tv_layoutManager="V7GridLayoutManager"
            app:tv_selectedItemIsCentered="true"
            app:tv_verticalSpacingWithMargins="@dimen/vs_15"
            android:visibility="gone" />

        <com.owen.tvrecyclerview.widget.TvRecyclerView
            android:id="@+id/tvHotList2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_below="@+id/tvUserHome"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/vs_10"
            android:paddingTop="@dimen/vs_15"
            android:paddingRight="@dimen/vs_10"
            android:paddingBottom="@dimen/vs_15"
            app:tv_horizontalSpacingWithMargins="@dimen/vs_10"
            app:tv_layoutManager="V7LinearLayoutManager"
            app:tv_selectedItemIsCentered="true"
            app:tv_verticalSpacingWithMargins="@dimen/vs_15"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>
