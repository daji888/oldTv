<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_source_focus"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/tvLiveAdd"
        android:layout_width="@dimen/vs_190"
        android:layout_height="@dimen/vs_50"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:paddingLeft="@dimen/vs_5"
        android:paddingRight="@dimen/vs_5"
        android:singleLine="true"
        android:text="+新增直播"
        android:shadowColor="@color/color_000000_80"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:textColor="@color/color_CBF46A"
        android:textSize="@dimen/ts_24"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvLive"
        android:layout_width="@dimen/vs_190"
        android:layout_height="@dimen/vs_50"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:paddingLeft="@dimen/vs_5"
        android:paddingRight="@dimen/vs_5"
        android:singleLine="true"
        android:shadowColor="@color/color_000000_80"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:textColor="@android:color/white"
        android:textSize="@dimen/ts_22" />
</FrameLayout>
